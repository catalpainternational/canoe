        "style-loader": "^1.2.1",
        "svg-url-loader": "^6.0.0",
        "terser-webpack-plugin": "^4.0.0",
        "ts-loader": "^8.0.11",
        "ts-node": "^9.0.0",
        "typescript": "^4.1.2",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^5.1.1",
        "workbox-cli": "^5.1.3",
