{
    "name": "canoe",
    "version": "1.0.0",
    "description": "An online learning platform.",
    "main": "index.js",
    "repository": "https://github.com/catalpainternational/canoe",
    "author": "Catalpa International",
    "license": "MIT",
    "private": true,
    "types": "dist/types/index.d.ts",
    "ava": {
      "babel": "inherit"
    },
    "scripts": {
        "build": "yarn build:types && webpack",
        "start": "yarn build:types:watch && webpack-dev-server",
        "makemessages": "node messages_scan.js && msgmerge --update --no-location --no-wrap locale/tet/canoe.po locale/canoe.pot",
        "compilemessages": "node_modules/gettext.js/bin/po2json locale/tet/canoe.po locale/json/tet.json -p",
        "translate": "yarn makemessages && yarn compilemessages",
        "build:types": "tsc --emitDeclarationOnly",
        "build:types:watch": "tsc --emitDeclarationOnly --watch",
        "type-check": "tsc --noEmit",
        "type-check:watch": "yarn type-check -- --watch",
        "test": "ava",
        "test:watch": "ava --watch"
    },
    "devDependencies": {
        "@babel/core": "^7.12.9",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/preset-env": "^7.12.7",
